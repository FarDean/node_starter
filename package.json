{
  "name": "node_starter",
  "version": "0.0.1",
  "description": "node typescript starter",
  "source": "index.ts",
  "main": "dist/main.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "dev": "parcel",
    "dev:ts": "ts-node-dev --respawn --transpile-only index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "watch": "parcel watch && node dist/main.js",
    "build": "parcel build"
  },
  "author": "fardean",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FarDean/node_starter.git"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.1.1",
    "@parcel/transformer-typescript-types": "^2.1.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.7",
    "parcel": "^2.1.1",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/node": "^17.0.8"
  }
